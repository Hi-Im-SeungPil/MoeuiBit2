<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/fragment_oin_orderParent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.coinOrder.Fragment_coinOrder"
    android:orientation="horizontal">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_coinArcade"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"/>

    <LinearLayout
        android:id="@+id/include_coin_parent"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:orientation="vertical">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_orderSellTransaction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/b"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:tabTextColor="#D6D6D6"
            app:tabSelectedTextColor="#F10A0A"
            app:tabIndicatorColor="#FAFAFA"
            android:background="@drawable/tab_border">

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="매수" />
            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="매도" />
            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="거래내역" />

        </com.google.android.material.tabs.TabLayout>

        <include
            android:id="@+id/include_coin_order"
            layout="@layout/include_coin_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include
            android:id="@+id/include_coin_sell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/include_coin_sell"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_transactionInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_transactionInfoIsNull"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="거래 내역이 없습니다."
            android:fontFamily="@font/nanum_square_round_r"
            android:textColor="#000000"
            android:layout_marginTop="30dp"
            android:textSize="17sp"
            android:visibility="gone"
            android:gravity="center"/>

        </LinearLayout>

    </LinearLayout>