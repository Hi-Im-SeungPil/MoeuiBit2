<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/dialog_common_background"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_common_dialog_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        tools:src="@drawable/twitter" />

    <TextView
        android:id="@+id/tv_common_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="35dp"
        android:textColor="@color/text_color"
        android:textSize="15dp"
        tools:text="@string/updateDialogMessage" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_common_button_background"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_common_dialog_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingVertical="18dp"
            android:textColor="@color/dialog_left_button_text_color"
            android:textSize="17dp"
            tools:text="취소" />

        <TextView
            android:id="@+id/tv_common_dialog_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingVertical="18dp"
            android:textColor="@color/text_color"
            android:textSize="17dp"
            tools:text="확인" />

    </LinearLayout>


</LinearLayout>