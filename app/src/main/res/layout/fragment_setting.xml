<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.Fragment_setting"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/a"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/C0F0F5C"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="설정"
            android:textSize="27sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:textColor="#FFFFFFFF"
            android:fontFamily="@font/nanum_square_round_b"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btn_sendError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="오류 제보"
        android:textSize="25sp"
        android:textColor="#000000"
        android:fontFamily="@font/nanum_square_round_r"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:background="#ffffffff"
        android:gravity="left"/>

    <Button
        android:id="@+id/btn_sendSuggestions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="아이디어 제보"
        android:textSize="25sp"
        android:textColor="#000000"
        android:fontFamily="@font/nanum_square_round_r"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:background="#ffffffff"
        android:gravity="left"/>

    <Button
        android:id="@+id/btn_appReset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="앱 데이터 초기화"
        android:textSize="25sp"
        android:textColor="#000000"
        android:fontFamily="@font/nanum_square_round_r"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:background="#ffffffff"
        android:gravity="left"/>

    <Button
        android:id="@+id/btn_writeReview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="리뷰 작성"
        android:textSize="25sp"
        android:textColor="#000000"
        android:fontFamily="@font/nanum_square_round_r"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:background="#ffffffff"
        android:gravity="left"/>

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="로그아웃"
        android:textSize="25sp"
        android:textColor="#000000"
        android:fontFamily="@font/nanum_square_round_r"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:background="#ffffffff"
        android:gravity="left"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="※ 업비트가 점검중일땐 앱이 실행되지 않아요!"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:textSize="13sp"
        android:textColor="#000000"
        android:fontFamily="@font/nanum_square_round_r"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="※ 상장 폐지되거나 리브랜딩된 종목은 \n\n    거래가 불가능합니다. 그전에 매도하시는 것을 권장합니다."
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:textSize="13sp"
        android:textColor="#000000"
        android:fontFamily="@font/nanum_square_round_r"/>

</LinearLayout>