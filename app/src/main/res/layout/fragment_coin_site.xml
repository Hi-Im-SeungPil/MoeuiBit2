<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.Fragment_coinSite">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/a"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/statusBar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="코인 사이트"
            android:textSize="27sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:textColor="#FFFFFFFF"
            android:fontFamily="@font/nanum_square_round_b"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 액션바 -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

<!--        스크롤뷰 시작-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="거래소"
                    android:textSize="20sp"
                    android:padding="15dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textColor="@color/statusBar"
                    android:fontFamily="@font/nanum_square_round_b"
                    android:background="@drawable/rv_coin_border"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="( 앱이 설치돼있다면 앱 실행 )"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/btn_hide1"
                    android:fontFamily="@font/nanum_square_round_r"
                    android:layout_marginRight="10dp"/>


                <Button
                    android:id="@+id/btn_hide1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:background="#FAFAFA"
                    android:text="▲"
                    android:textSize="17sp"
                    android:textColor="@color/statusBar"
                    android:layout_marginRight="10dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/linears_group1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_upBit"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:background="@drawable/img_upbit"/>

                <ImageView
                    android:id="@+id/iv_bithumb"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:background="@drawable/img_bithumb"/>

                <ImageView
                    android:id="@+id/iv_coinOne"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:background="@drawable/img_coinone"/>
            </LinearLayout>

<!--            거래소-->

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="커뮤니티"
                    android:textSize="20sp"
                    android:padding="15dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textColor="@color/statusBar"
                    android:fontFamily="@font/nanum_square_round_b"
                    android:background="@drawable/rv_coin_border"/>

                <Button
                    android:id="@+id/btn_hide2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:background="#FAFAFA"
                    android:text="▲"
                    android:textSize="17sp"
                    android:textColor="@color/statusBar"
                    android:layout_marginRight="10dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/linears_group2"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/linear_ddangle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:clickable="true">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="@drawable/ddengle"
                        android:layout_weight="2"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:text="땡글"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:fontFamily="@font/nanum_square_round_b"
                        android:textColor="#000000"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_coinPan"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:clickable="true">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="@drawable/img_coinpan"
                        android:layout_weight="2"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:text="코인판"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:fontFamily="@font/nanum_square_round_b"
                        android:textColor="#000000"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_moneyNet"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:clickable="true">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:background="@drawable/img_moneynet"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:text="머니넷"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:fontFamily="@font/nanum_square_round_b"
                        android:textColor="#000000"/>

                </LinearLayout>

            </LinearLayout>
<!--            커뮤니티 1행-->

            <!--            커뮤니티 2행 시작-->

            <LinearLayout
                android:id="@+id/linears_group3"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/linear_cobak"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:clickable="true">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="@drawable/img_cobak"
                        android:layout_weight="2"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:text="코박"
                        android:layout_weight="1"
