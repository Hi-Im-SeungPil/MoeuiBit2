<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.investmentDetails.Fragment_investmentDetails"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/a"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/statusBar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="투자내역"
            android:textSize="27sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:textColor="#FFFFFFFF"
            android:fontFamily="@font/nanum_square_round_b"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#F3F2F2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="내 보유자산"
            android:textSize="20sp"
            android:padding="10dp"
            android:textColor="#000000"
            android:fontFamily="@font/nanum_square_round_b"/>

        <Button
            android:id="@+id/btn_earningKrw"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="KRW 충전"
            android:layout_weight="1"
            android:background="#FFFFFFFF"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/btn_portfolio"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="포트폴리오"
            android:layout_weight="1"
            android:background="#FFFFFFFF"
            android:layout_margin="5dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:background="#F3F2F2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="보유KRW (가상)"
                android:layout_marginBottom="5dp"
                android:textColor="#000000"
                android:textSize="17sp"
                android:fontFamily="@font/nanum_square_round_r"/>
            <TextView
                android:id="@+id/tv_myKoreanWon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginBottom="10dp"
                android:textSize="17sp"
                android:textColor="#000000"
                android:fontFamily="@font/nanum_square_round_b"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="총매수"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:fontFamily="@font/nanum_square_round_r"/>
                <TextView
                    android:id="@+id/tv_totalBuyOut"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="0"
                    android:gravity="right"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:fontFamily="@font/nanum_square_round_r"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="총평가"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:fontFamily="@font/nanum_square_round_r"/>
                <TextView
                    android:id="@+id/tv_totalEvaluation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="0"
                    android:gravity="right"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:fontFamily="@font/nanum_square_round_r"/>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="총 보유자산"
                android:paddingBottom="5dp"
                android:textColor="#000000"
                android:textSize="17sp"
                android:paddingLeft="10dp"
                android:background="@drawable/fragment_investment_details_border"
                android:fontFamily="@font/nanum_square_round_r"/>
            <TextView
                android:id="@+id/tv_myTotalProperty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginBottom="10dp"
                android:textSize="17sp"
                android:textColor="#000000"
                android:paddingLeft="10dp"
                android:background="@drawable/fragment_investment_details_border"
                android:fontFamily="@font/nanum_square_round_b"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp"
                android:paddingLeft="5dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="평가손익"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:fontFamily="@font/nanum_square_round_r"/>
                <TextView
                    android:id="@+id/tv_evaluationGainLoss"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="0"
                    android:gravity="right"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:fontFamily="@font/nanum_square_round_r"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="수익률"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:fontFamily="@font/nanum_square_round_r"/>
                <TextView
                    android:id="@+id/tv_yield"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="0"
                    android:gravity="right"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:fontFamily="@font/nanum_square_round_r"/>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="5dp">

    <Button
        android:id="@+id/btn_investmentDetailOrderByName"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:text="이름 ↓↑"
        android:background="#FAFAFA"
        android:textColor="#ACABAB"
        android:fontFamily="@font/nanum_square_round_b"
        android:textSize="13sp"/>

    <Button
        android:id="@+id/btn_investmentDetailOrderByYield"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:text="수익률 ↓↑"
        android:background="#FAFAFA"
        android:textColor="#ACABAB"
        android:fontFamily="@font/nanum_square_round_b"
        android:textSize="13sp"/>


</LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_myCoins"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>